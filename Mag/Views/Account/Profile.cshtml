@model AspNetUser
@{
    ViewData["Title"] = "Login";
}
<h2>Profile</h2>
<hr />
<form asp-action="UpdateProfile">
    <div class="container">
        <div class="row">
                <div class="col-md-3">
                        <div class="form-group pt-2">
                            <label asp-for="FirstName" class="control-label">Ім'я</label>
                            <input asp-for="FirstName" required class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group pt-2">
                            <label asp-for="LastName" class="control-label">Прізвище</label>
                            <input asp-for="LastName" required class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group pt-2">
                            <label asp-for="SecondName" class="control-label">По-батькові</label>
                            <input asp-for="SecondName" required class="form-control" />
                            <span asp-validation-for="SecondName" class="text-danger"></span>
                        </div>
                        <div class="form-group pt-2">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" required class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group pt-2">
                            <label asp-for="DOB" class="control-label">Дата народження</label>
                            <input asp-for="DOB" required class="form-control" type="date"/>
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                        <div class="form-group pt-2">
                            <label asp-for="Gender" class="control-label">Стать</label>
                            <select class="form-select" aria-label="Gender" asp-for="Gender" required>
                                <option value="0">Other</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                        </div>
                </div>
        </div>
        <div class="row">
            <div class="col pt-4">
                    <input type="submit" value="UpdateProfile" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}